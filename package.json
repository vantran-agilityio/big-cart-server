{
  "name": "vinmart-api",
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "db:dev:migrate": "npx prisma migrate dev --name init",
    "db:dev:up": "docker compose up -d vinmart-dev-db",
    "db:dev:down": "docker compose down",
    "build": "cross-env NODE_ENV=production concurrently \"npx tsc\" \"npx tsc-alias\"",
    "start": "cross-env NODE_ENV=production node dist/src/server.js",
    "dev": "cross-env NODE_ENV=development concurrently \"npx tsc --watch\" \"npx tsc-alias --watch\" \"nodemon -q dist/src/server.js\"",
    "test:unit": "cross-env NODE_ENV=test jest -i",
    "test:unit:watch": "cross-env NODE_ENV=test jest -i --watch",
    "test:unit:coverage": "cross-env NODE_ENV=test jest -i --coverage"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.2",
    "@types/nodemailer": "^6.4.7",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "^2.0.12",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.3",
    "nodemon": "^2.0.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@prisma/client": "^3.3.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.15.0",
    "http-status-codes": "^2.2.0",
    "jwt-simple": "^0.5.6",
    "mkdirp": "^3.0.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1"
  }
}
